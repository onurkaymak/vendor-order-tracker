<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Order Tracker</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
    @using OrderTracker.Models;
      <h1>@Model.Name</h1>
      @if(@Model.Orders.Count == 0)
      {
        <p>There is no order at this moment for <strong>@Model.Name</strong>.</p>
      }
      else
      {
      
    <ul>
    @foreach (Order order in @Model.Orders)
    {
      <li><h4><a href="/vendors/@Model.Id/orders/@order.Id">Order - @order.Id</a></h4></li>
    }
    </ul>
      }

    <a href='/vendors/@Model.Id/orders/new'>Create new Order</a>
    <br>
    <a href='/vendors'>Back to Vendors List</a>
  </body>
</html>